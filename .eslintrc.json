{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["@quero/eslint-config-typescript"],
  "root": true,
  "rules": {
    "max-classes-per-file": "off",
    "arrow-parens": ["error", "always"]
  },
  "env": {
    "node": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src", "test"],
        "extensions": [".ts"]
      }
    }
  }
}
