{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "@quero/eslint-config-typescript"
  ],
  "root": true,
  "env": {
    "node": true,
    "jest": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "src",
          "test"
        ],
        "extensions": [
          ".ts"
        ]
      }
    }
  }
}
